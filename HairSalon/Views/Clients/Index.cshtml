@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>

<h1>All Clients!</h1>
<hr>

@if (@Model.Count == 0)
{
  <h3>There are no clients in the System!</h3>
  <p>@Html.ActionLink("Would You Like To Add A New Client?", "Create")</p>  
}

<ul>
  @foreach(Client client in Model)
  {
    <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
  }
</ul>

<p>@Html.ActionLink("Add New Client", "Create")</p>
<p>@Html.ActionLink("See All Stylists", "Index", "Stylists")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>