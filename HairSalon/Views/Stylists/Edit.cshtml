@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Edit</h2>
<hr>

<h4>Edit This Stylist: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.DateOfHire)
  @Html.TextBoxFor(model => model.DateOfHire, new { @type = "date" })

  @Html.LabelFor(model => model.Wage)
  @Html.TextBoxFor(model => model.Wage)

  <input type="submit" value="Update Stylist">
}

<p>@Html.ActionLink("Back to Stylists", "Index")</p>
<p>@Html.ActionLink("See All Clients", "Index", "Clients")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>