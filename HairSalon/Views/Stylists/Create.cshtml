@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1>Add A New Stylist</h1>
<hr>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.DateOfHire)
  @Html.TextBoxFor(model => model.DateOfHire, new { @type = "date" })

  @Html.LabelFor(model => model.Wage)
  @Html.TextBoxFor(model => model.Wage)

  <input type="submit" value="Add A New Stylist">
}


<p>@Html.ActionLink("Show All Stylists", "Index")</p>
<p>@Html.ActionLink("See All Clients", "Index", "Clients")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>